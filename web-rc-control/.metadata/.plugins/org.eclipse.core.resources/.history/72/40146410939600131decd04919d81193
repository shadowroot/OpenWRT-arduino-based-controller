#include "utils.h"
/**
 * Error message
 * @param msg
 * @param err
 */
void error_message(const char * msg){
	fprintf(stderr,msg,errno);
}

/**
 * Initializing utils
 * session file
 * log file
 *
 * @return -1 error
 * 0 OK
 */
int init_utils(){
	if(!LOG_FILE){
		LOG_FILE = fopen(LOG_PATH,"a+");
		SESSION_FILE= fopen(SESSION_PATH,"a+");

		if(!LOG_FILE){
			error_message("Logfile cannot be created");
			return -1;
		}
		if(!SESSION_FILE){
			error_message("Session file cannot be created");
			return -1;
		}
	}

	return 0;
}


/**
 * Logging
 * @param level
 * @param msg
 */
void log(int level,const char * msg){
	struct time_t now = time(NULL);
	char * out = " [ ";
	strcat(out,ctime(&now));

	fprintf(LOG_FILE,"[ %s ] %d  %s ");
}
