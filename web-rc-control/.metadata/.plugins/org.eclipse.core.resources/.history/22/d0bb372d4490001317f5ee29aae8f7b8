#include <stdio.h>

#ifndef JSON_H_
#define JSON_H_


#define TYPE_STRING 1
#define TYPE_INT 2
#define TYPE_BOOL 3

/**
 * Describing JSON Object with tokenizer. Each token describes parama and value pair.
 */
struct TObject{
	int size;
	struct TToken* tokens;
};
/**
 * Describing array of values it means values of type
 */
struct TArray{
	union TVALUE* values;
	char type;
	int size;
};

union TVALUE{
	char * string;
	int value;
	struct TObject * object;
	struct TArray * array;
	char bool;

};
/**
 *
 */
struct TToken{
	char * param;
	char type;
	union TVALUE value;
	struct TToken * next;
};

#endif /* JSON_H_ */
