#include <stdio.h>

#ifndef JSON_H_
#define JSON_H_

/**
 * Describing JSON Object with tokenizer. Each token describes parama and value pair.
 */
struct TObject{
	int size;
	struct TToken* tokens;
};
/**
 * Describing array
 */
struct TArray{
	char ** values;
	int size;
};

union TVALUE{
	char * string;
	int value;
	struct TObject * object;
	struct TArray * array;

};

struct TToken{
	char * param;
	union TVALUE value;
	struct TToken * next;
};

#endif /* JSON_H_ */
